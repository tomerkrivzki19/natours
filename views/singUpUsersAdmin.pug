extends base


block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create your new account
      form.form.form--singup-admin
        .form__group.ma-bt-md
          label.form__label(for='name') Role
          input#role.form__input(type='text', placeholder='Tomer Tomer', required)
        .form__group.ma-bt-md
          label.form__label(for='name') Full Name
          input#name.form__input(type='text', placeholder='Tomer Tomer', required)
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', placeholder='you@example.com', required)
        .form__group
          label.form__label(for='email') Photo
          input#photo(type="file", name="Photo")
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-md
          label.form__label(for='password-confirm') Password Confirm
          input#passwordConfirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Sing up New User